<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<!-- hacemos un for each para poder pasar los datos del JSON -->
			<% productsVisited.forEach(product => { %>
			 
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%- product.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%- product.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%- toThousand(product.price - product.price / 100 * product.discount) %></h2>
<!-- APLICAMOS LA REGLA DE TRES SIMPLE PARA DETERMINAR EL DESCUENTO DEL PRODUCTO -->
								<span><%- product.discount !== 0 ? `${product.discount} % OFF` : "" %>`</span>
<!-- HACEMOS UN IF TERNARIO Y PREGUNTAMOS SI EL DESCUENTO ES DINTINTO A 0 ?, MOSTRAMOS EL DESCUENTO SINO, NO MOSTRAMOS EL DESCUENTO XQ ES DE 0 -->
								<p><%- product.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>

			<% }) %> 
		</div>
	</div>
<!-- /ultima visita -->

<!-- Ofertas -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class="products-title">Ofertas</h2>
		</div>
		<!-- Show the "in-sale" products -->
		<!-- hacemos un foreach para poder pasar los datos del JSON -->
		<% productsInSale.forEach(product => { %>
			
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%- product.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%- product.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<%- toThousand(product.price - product.price / 100 * product.discount) %></h2>
<!-- APLICAMOS LA REGLA DE TRES SIMPLE PARA DETERMINAR EL DESCUENTO DEL PRODUCTO -->
							<span><%- product.discount !== 0 ? `${product.discount}% OFF` : "" %>`</span>
<!-- HACEMOS UN IF TERNARIO Y PREGUNTAMOS SI EL DESCUENTO ES DINTINTO A 0 ?, MOSTRAMOS EL DESCUENTO SINO, NO MOSTRAMOS EL DESCUENTO XQ ES DE 0 -->
							<p><%- product.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			
			<% }) %> 
		</div>
	</div>
	<!-- /Ofertas -->
	
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>